---
interface Props {
	title: string;
	description: string;
	duration: string;
}

const { title, description, duration } = Astro.props;
---

<div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all hover:scale-105 transform duration-300">
	<h3 class="text-2xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
		{title}
	</h3>
	<p class="text-gray-600 mb-6 leading-relaxed">{description}</p>
	<p class="text-sm text-primary-600 font-medium">Dur√©e: {duration}</p>
</div>