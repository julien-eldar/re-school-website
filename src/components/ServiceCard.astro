---
interface Props {
	title: string;
	duration: string;
}

const { title, duration } = Astro.props;
---

<div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all hover:scale-105 transform duration-300">
	<h3 class="text-2xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
		{title}
	</h3>
	<slot name="subtitle" /> <hr class="my-4">
	<slot name="section-1" />
	<slot name="section-2" />
	<slot name="section-3" />
	<p class="text-sm text-primary-600 font-medium mt-6">Dur√©e: {duration}</p>
</div>